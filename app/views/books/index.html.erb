<div class="container">
	<div class="row">
		<div class="col-xs-3">
		<%= render 'books/list', book: @book, user: @user %>
		</div>
		<div class="col-xs-9">
			<h1>Books</h1>
			<table class='table table-hover table-inverse'>
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
						<th></th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @books.each do |book| %>
				        <tr>
				        	<td>
					            <%= link_to user_path(book.user) do %>
					            <%= attachment_image_tag @user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg", class: "pull-left profile-thumb" %>
				            <% end %>
				        	</td>
							<td><%= link_to book.title, book_path(book.id) %></td>
							<td><%= book.body %></td>
							<td>
								いいね件数: <%= @book.favorites.count %>
								<% if current_user.already_favorited?(@book) %>
									<%= button_to 'いいね削除', book_favorite_path(@book), method: :delete %>
								<% else %>
								<% end %>
							</td>

						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>
