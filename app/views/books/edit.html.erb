<div class="container">
  <div class="row">
    <div class='col-xs-9'>
      <% if flash[:notice] %>
      　<div class="flash">
        　<%= flash[:notice] %>
      　</div>
      <% end %>
      <h1>Editing Book</h1>
      <%= form_for(@book) do |f| %>
        <h4>Title</h4>
          <%= f.text_field :title %>
        <h4>Body</h4>
          <%= f.text_field :body %>
        <p><%= f.submit 'Update Book' %></p>
        <p><%= link_to "Show", book_path(@book) %> | <%= link_to "Back", books_path %></p>
      <% end %>

      <% if @book.errors.any? %>
          <div id="error_explanation">
            <h3><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h3>
            <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
      <% end %>
    </div>
  </div>
</div>
