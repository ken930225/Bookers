<% if flash[:notice] %>
　<div class="flash">
　<%= flash[:notice] %>
　</div>
<% end %>
<h2>User info</h2>
<%= attachment_image_tag user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg", class: "pull-left profile-thumb" %>
<table class="table">
    <tbody>
	    <tr>
	    	<th>name</th>
	    	<th><%= user.name %></th>
	    </tr>
	    <tr>
	    	<th>introduction</th>
	    	<th><%= user.introduction %></th>
	    </tr>
	</tbody>
</table>
<%= link_to "", edit_user_path(user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>

<h3>New book</h3>
<%= form_for(book) do |f| %>
<% if book.errors.any? %>
    <div id="error_explanation">
      <h3><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h3>
      <ul>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
<% end %>
	<h4>Title</h4>
	  <%= f.text_field :title, class: "col-xs-12" %>
	<h4>Opinion</h4>
	  <%= f.text_area :body, class: "col-xs-12" %>
	<%= f.submit 'Create Book', class: "col-xs-12 btn btn-primary" %>
<% end %>

