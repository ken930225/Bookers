<div class="container">
	<div class="row">
		<div class="col-xs-3">
		<%= render 'books/list', book: @book, user: @user %>
		</div>
		<div class='col-xs-9'>
		<h1>Users</h1>
			<table class='table table-hover table-inverse'>
				<thead>
					<tr>
						<th>image</th>
						<th>name</th>
					</tr>
				</thead>
				<tbody>
					<% @users.each do |user| %>
				        <tr>
							<td><%= attachment_image_tag user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg", class: "pull-left profile-thumb" %></td>
							<td><%= user.name %></td>
							<td><%= link_to "Show", user_path(user.id) %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>
